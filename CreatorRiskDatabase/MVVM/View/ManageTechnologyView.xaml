<Window x:Class="CreatorOutcomesDatabase.MVVM.View.ManageTechnologyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatorOutcomesDatabase.MVVM.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="800"
        Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Метод:" />
        <TextBox Grid.Row="1"
                 Name="Method"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="2"
                   Text="Описание:" />
        <TextBox Grid.Row="3"
                 Name="Description"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="4"
                   Text="Применение:" />
        <TextBox Grid.Row="5"
                 Name="Usage" 
                 TextWrapping="Wrap"/>
        <TextBlock Grid.Row="6"
                   Text="Масштаб:" />
        <TextBox Grid.Row="7"
                 Name="Scale"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="8"
                   Text="Временной горизонт:" />
        <TextBox Grid.Row="9"
                 Name="Horizont"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="10"
                   Text="Уровень принятия решений:" />
        <TextBox Grid.Row="11"
                 Name="Level"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="12"
                   Text="Необходимость информации/данных:" />
        <TextBox Grid.Row="13"
                 Name="Necessity"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="14"
                   Text="Опыт специалиста:" />
        <TextBox Grid.Row="15"
                 Name="Experience"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="16"
                   Text="Качеств/количеств:" />
        <TextBox Grid.Row="17"
                 Name="Сharacteristic"
                 TextWrapping="Wrap" />
        <TextBlock Grid.Row="18"
                   Text="Применение усилий:" />
        <TextBox Grid.Row="19"
                 Name="Effort"
                 TextWrapping="Wrap" />
        <Button Grid.Row="21"
                Click="ApplyButtonClick"
                Height="50"
                Margin="1">
            <TextBlock Text="Применить"
                       FontSize="20"
                       FontFamily="Consolas"/>
        </Button>
    </Grid>
</Window>
