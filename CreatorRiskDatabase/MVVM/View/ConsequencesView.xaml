<UserControl x:Class="CreatorOutcomesDatabase.MVVM.View.ConsequencesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CreatorOutcomesDatabase.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeadingTextBlock"
               TargetType="TextBlock">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontWeight"
                    Value="Bold" />
        </Style>
        <Style x:Key="DynamicTextBlock"
               TargetType="TextBlock">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="FontSize"
                    Value="15" />
        </Style>
        <Style x:Key="Button"
               TargetType="Button">
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.15*" />
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
                 Grid.Row="0"     
                 ItemsSource="{Binding Consequences}"
                 SelectedItem="{Binding SelectedItem}"
                 Margin="1"
                 FontSize="15"
                 FontFamily="Concolas"
                 Name="MainList"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Number}" />
            </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1"
                    Margin="1">
            <TextBlock Text="Наименование последствия:"
                       FontSize="15" 
                       FontWeight="Bold"
                       FontStyle="Italic"/>
            <TextBlock Text="{Binding SelectedItem.Name}"
                       FontSize="13"
                       FontWeight="Light" />

            <TextBlock Text="Ущерб последствия:"
                       FontSize="15"
                       FontWeight="Bold"
                       FontStyle="Italic" />
            <TextBlock Text="{Binding SelectedItem.Damage}"
                       FontSize="13"
                       FontWeight="Light" />

            <TextBlock Text="Связанные угрозы:"
                       FontSize="15"
                       FontWeight="Bold"
                       FontStyle="Italic" />

            <ListBox ItemsSource="{Binding SelectedItem.NameThreats}"
                     Margin="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <Border BorderBrush="Black"
                BorderThickness="1"
                Padding="2"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="2">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Style="{StaticResource Button}"
                        Content="Добавить"
                        Command="{Binding ManageElement}"
                        CommandParameter="{StaticResource TrueValue}" />

                <Button Style="{StaticResource Button}"
                        Content="Изменить"
                        Command="{Binding ManageElement}"
                        CommandParameter="{StaticResource FalseValue}" />

                <Button Style="{StaticResource Button}"
                        Content="Удалить"
                        Command="{Binding DeleteElement}" />

                <Button Style="{StaticResource Button}"
                        Content="Справка"
                        Command="{Binding GetHelp}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
