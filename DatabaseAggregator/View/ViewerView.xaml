<UserControl x:Class="DatabaseAggregator.View.ViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             DataContext="{DynamicResource VVM}">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="staticButton">
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontFamily" Value="Verdana" />
            <Setter Property="Cursor"  Value="Hand" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Всего записей:"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />

            <TextBlock Grid.Column="1"
                       Text="{Binding CurrentView.Count}"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
        </Grid>

        <ListBox ItemsSource="{Binding CurrentView, Mode=OneWay}"
                 Grid.Row="1"
                 Name="VulListBox"
                 FontSize="15"
                 Margin="3"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Identifier}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Row="1"
                 Grid.Column="1"
                 Margin="3"
                 ItemsSource="{Binding SelectedItem.Parameters, ElementName=VulListBox}"
                 FontSize="15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Description}" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Источник знаний:"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding From}"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="2"
                Content="Создать"
                Style="{StaticResource staticButton}"
                Command="{Binding CreateCommand, Mode=OneWay}"
                IsEnabled="{Binding IsEnabledCreate, Mode=OneWay}" />

        <Button Grid.Row="3"
                Grid.Column="0"
                Content="Сохранить"
                Style="{StaticResource staticButton}"
                Command="{Binding SaveCommannd, Mode=OneWay}"
                IsEnabled="{Binding IsEnabledSave, Mode=OneWay}" />
        
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="Просмотреть"
                Style="{StaticResource staticButton}"
                Command="{Binding ViewCommand, Mode=OneWay}"
                IsEnabled="{Binding IsEnabledCreate, Mode=OneWay}" />

        <ProgressBar Grid.Row="2"
                     Grid.Column="2"
                     Margin="2"
                     IsIndeterminate="{Binding IsIndeterminate, Mode=OneWay}" />
    </Grid>
</UserControl>
    