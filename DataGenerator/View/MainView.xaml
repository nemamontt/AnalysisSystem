<Window x:Class="DataGenerator.VIew.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGenerator"
        xmlns:viewmodel="clr-namespace:DataGenerator.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="Генератор баз данных v 1.0.0"
        Height="500"
        Width="900"
        MinHeight="500"
        MinWidth="900">
    <Window.Resources>
        <Style x:Key="Heading"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
        <Style x:Key="InputField"
               TargetType="TextBox">
            <Setter Property="Width"
                    Value="200" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="Cursor"
                    Value="IBeam" />
        </Style>
        <Style x:Key="ContentsList"
               TargetType="ComboBox">
            <Setter Property="Width"
                    Value="200" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
            <Setter Property="Margin"
                    Value="1" />
        </Style>
        <Style x:Key="StaticButton"
               TargetType="Button">
            <Setter Property="Width"
                    Value="{Binding}" />
            <Setter Property="Content"
                    Value="{Binding}" />
            <Setter Property="Margin"
                    Value="1" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>
        <Style x:Key="GroupElements"
               TargetType="StackPanel">
            <Setter Property="Margin"
                    Value="1" />
        </Style>
        <Style x:Key="Frame"
               TargetType="Border">
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="Black" />
            <Setter Property="Margin"
                    Value="2" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="БД - специалист по ЗИ"
                   HorizontalAlignment="Center" />
        <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Text="БД - нарушитель"
                   HorizontalAlignment="Center" />
        <TextBlock Grid.Column="2"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Text="БД - состояние ПФ"
                   HorizontalAlignment="Center" />
        <Border Grid.Column="0"
                Grid.Row="1"
                Style="{StaticResource Frame}">
            <StackPanel Orientation="Vertical"
                        Style="{StaticResource GroupElements}">
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Наименование органа"
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}" 
                                    Width="20"
                                    Content="➕"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Статус по выявленной уязвимости"
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Наименование СС СОПКА "
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Предпринятые действия"
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="1">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Сохранить исходные данные" />
                        </Button>
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Загрузить исходные данные" />
                        </Button>
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Сгенерировать БД" />
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Border Grid.Column="1"
                Grid.Row="1"
                Style="{StaticResource Frame}">
            <StackPanel Orientation="Vertical"
                        Style="{StaticResource GroupElements}">
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Цель атаки "
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Используемые инструменты "
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <TextBlock Text="Данные о предыдущих атаках"
                                   Style="{StaticResource Heading}" />
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <TextBox Style="{StaticResource InputField}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➕" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Style="{StaticResource GroupElements}">
                            <ComboBox Style="{StaticResource ContentsList}" />
                            <Button Style="{StaticResource StaticButton}"
                                    Width="20"
                                    Content="➖" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Frame}">
                    <StackPanel Orientation="Vertical"
                                Style="{StaticResource GroupElements}">
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Сохранить исходные данные" />
                        </Button>
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Загрузить исходные данные" />
                        </Button>
                        <Button Style="{StaticResource StaticButton}"
                                Width="auto">
                            <TextBlock Text="Сгенерировать БД" />
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        <Border Grid.Column="2"
                Grid.Row="1"
                Style="{StaticResource Frame}">
            <ScrollViewer>
                <StackPanel Orientation="Vertical"
                            Style="{StaticResource GroupElements}">
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Наименование анализируемого СС"
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Месторасположение, дислокация СС  "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Режима функционирования СС "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Наименование ПО предоставившего ПД "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Наименование атрибута ПД "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Текущее значение атрибута ПД "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Требуемое значение атрибута "
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="Тег значения атрибута ПД"
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <TextBlock Text="НАСТРОЙКИ СДЕЛАТЬ"
                                       Style="{StaticResource Heading}" />
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <TextBox Style="{StaticResource InputField}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➕" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Style="{StaticResource GroupElements}">
                                <ComboBox Style="{StaticResource ContentsList}" />
                                <Button Style="{StaticResource StaticButton}"
                                        Width="20"
                                        Content="➖" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource Frame}">
                        <StackPanel Orientation="Vertical"
                                    Style="{StaticResource GroupElements}">
                            <Button Style="{StaticResource StaticButton}"
                                    Width="auto">
                                <TextBlock Text="Сохранить исходные данные" />
                            </Button>
                            <Button Style="{StaticResource StaticButton}"
                                    Width="auto">
                                <TextBlock Text="Загрузить исходные данные" />
                            </Button>
                            <Button Style="{StaticResource StaticButton}"
                                    Width="auto">
                                <TextBlock Text="Сгенерировать БД текущего состояния" />
                            </Button>
                            <Button Style="{StaticResource StaticButton}"
                                    Width="auto">
                                <TextBlock Text="Сгенерировать БД эталонного состояния" />
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
           
        </Border>
    </Grid>
</Window>