<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.SetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="База данных уязвимостей"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border Grid.Row="1"
                Grid.Column="0"
                BorderBrush="Black"
                BorderThickness="1"         
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.VulnerabilitiePath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding VulnerabilitieButtonBackground}"
                CommandParameter="Vulnerabilitie" />
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <TextBlock Text="Дата изменения:"
                       FontSize="12"
                       FontFamily="Consolas" />
            <TextBlock Text="{Binding LastUpdateConfig.Vulnerabilitie}"
                       FontSize="12"
                       FontFamily="Consolas" />
        </StackPanel>

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="База данных угроз"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="4"
                Grid.Column="0"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.ThreatPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="4"
                Grid.Column="1"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding ThreatButtonBackground}"
                CommandParameter="Threat" />
        <StackPanel Grid.Row="5"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <TextBlock Text="Дата изменения:"
                       FontSize="12"
                       FontFamily="Consolas" />
            <TextBlock Text="{Binding LastUpdateConfig.Threat}"
                       FontSize="12"
                       FontFamily="Consolas" />
        </StackPanel>

        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="База данных техник и тактик"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="7"
                Grid.Column="0"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.TacticPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="7"
                Grid.Column="1"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding TacticButtonBackground}"
                CommandParameter="Tactic" />
        <StackPanel Grid.Row="8"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <TextBlock Text="Дата изменения:"
                       FontSize="12"
                       FontFamily="Consolas" />
            <TextBlock Text="{Binding LastUpdateConfig.Tactic}"
                       FontSize="12"
                       FontFamily="Consolas" />
        </StackPanel>

        <TextBlock Grid.Row="9"
                   Grid.Column="0"
                   Text="База данных мер защиты"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="10"
                Grid.Column="0"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.ProtectionMeasurePath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="10"
                Grid.Column="1"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding ProtectionMeasureButtonBackground}"
                CommandParameter="ProtectionMeasure" />
        <StackPanel Grid.Row="11"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <TextBlock Text="Дата изменения:"
                       FontSize="12"
                       FontFamily="Consolas" />
            <TextBlock Text="{Binding LastUpdateConfig.ProtectionMeasure}"
                       FontSize="12"
                       FontFamily="Consolas" />
        </StackPanel>

        <TextBlock Grid.Row="12"
                   Grid.Column="0"
                   Text="База данных рисков"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="13"
                Grid.Column="0"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.OutcomesPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="13"
                Grid.Column="1"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding OutcomesButtonBackground}"
                CommandParameter="Outcomes" />
        <StackPanel Grid.Row="14"
                    Grid.Column="0"
                    Orientation="Horizontal">
            <TextBlock Text="Дата изменения:"
                       FontSize="12"
                       FontFamily="Consolas" />
            <TextBlock Text="{Binding LastUpdateConfig.Outcomes}"
                       FontSize="12"
                       FontFamily="Consolas" />
        </StackPanel>

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="База данных эксплойтов"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="1"
                Grid.Column="2"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.ExploitPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="1"
                Grid.Column="3"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding ExploitButtonBackground}"
                CommandParameter="Exploit" />

        <TextBlock Grid.Row="3"
                   Grid.Column="2"
                   Text="База данных нарушителей"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="4"
                Grid.Column="2"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.ViolatorPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="4"
                Grid.Column="3"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding ViolatorButtonBackground}"
                CommandParameter="Violator" />

        <TextBlock Grid.Row="6"
                   Grid.Column="2"
                   Text="База данных спициалиста по ЗИ"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="7"
                Grid.Column="2"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.SpecialistPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="7"
                Grid.Column="3"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding SpecialistButtonBackground}"
                CommandParameter="Specialist" />

        <TextBlock Grid.Row="9"
                   Grid.Column="2"
                   Text="База данных о текущем состоянии ПФ СОПКА"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="10"
                Grid.Column="2"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.CurStatusPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="10"
                Grid.Column="3"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding CurrentStatusButtonBackground}"
                CommandParameter="CurrentStatus" />

        <TextBlock Grid.Row="12"
                   Grid.Column="2"
                   Text="База данных об эталонном состоянии ПФ СОПКА"
                   FontSize="15"
                   FontFamily="Consolas" />
        <Border BorderBrush="Black"
                BorderThickness="1"
                Grid.Row="13"
                Grid.Column="2"
                Margin="1">
            <TextBlock Text="{Binding DisplayedPaths.RefStatusPath}"
                       FontSize="20"
                       TextWrapping="Wrap" />
        </Border>
        <Button Grid.Row="13"
                Grid.Column="3"
                Content="..."
                Width="50"
                Cursor="Hand"
                Command="{Binding Set}"
                Background="{Binding ReferenceStatusButtonBackground}"
                CommandParameter="ReferenceStatus" />
    </Grid>
</UserControl>