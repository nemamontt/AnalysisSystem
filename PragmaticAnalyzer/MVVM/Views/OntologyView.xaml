<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.OntologyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="670" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <TreeView Grid.Column="0"
                  Margin="5"
                  Name="TreeViewtEntity"
                  ItemsSource="{Binding Ontologys}"
                  FontSize="15">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Entities}">
                    <TextBlock Text="{Binding Name}"
                               FontSize="15"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Width="600" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Border Grid.Column="1"
                Margin="5"
                BorderBrush="Black"
                BorderThickness="1">
            <ScrollViewer Margin="2">
                <TextBlock Text="{Binding SelectedItem.Description, ElementName=TreeViewtEntity}"
                           FontSize="15"
                           TextWrapping="Wrap" 
                           FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>
        <Button Grid.Column="0"
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Width="200"
                Content="Загрузить онтологию"
                FontSize="16"
                FontFamily="Consolas"
                Cursor="Hand"
                Command="{Binding LoadCommand}" />
    </Grid>
</UserControl>