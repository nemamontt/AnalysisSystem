<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.VulView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Идентификатор:"
                   Margin="5"
                   TextWrapping="Wrap"
                   FontSize="15"
                   FontFamily="Consolas" />
        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 ItemsSource="{Binding Vulnerabilities, Mode=OneWay}"
                 Name="VulListBox"
                 FontSize="15"
                 Margin="1"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Identifier}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="0"
                 Grid.Column="1"
                 Grid.RowSpan="2"
                 Margin="1"
                 ItemsSource="{Binding SelectedItem.Parameters, ElementName=VulListBox}"
                 FontSize="15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding Description}" 
                                   MaxWidth="1000"
                                   TextWrapping="Wrap"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Источник знаний:"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding From}"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
