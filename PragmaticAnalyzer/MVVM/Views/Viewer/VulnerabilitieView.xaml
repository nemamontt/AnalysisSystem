<UserControl x:Class="PragmaticAnalyzer.MVVM.Views.VulnerabilitieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PragmaticAnalyzer.MVVM.Views"
             xmlns:assist="clr-namespace:PragmaticAnalyzer.Assistant"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="1000">
    <UserControl.Resources>
        <assist:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <Style x:Key="Button"
               TargetType="Button">
            <Setter Property="Margin"
                    Value="3" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
        </Style>
        <Style x:Key="HeadingTextBlock"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="MinWidth"
                    Value="1000" />
        </Style>
        <Style x:Key="DynamicTextBlock"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Идентификатор:"
                   Margin="5"
                   TextWrapping="Wrap"
                   FontSize="15"
                   FontFamily="Consolas" />

        <ListBox Grid.Row="1"
                 Grid.Column="0"         
                 FontSize="15"
                 Margin="1"
                 VirtualizingStackPanel.IsVirtualizing="True"
                 VirtualizingStackPanel.VirtualizationMode="Recycling"
                 ItemsSource="{Binding Vulnerabilities, Mode=OneWay}"
                 SelectedItem="{Binding SelectedVulnerabilitie}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Identifier}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Row="0"
                 Grid.Column="1"
                 Grid.RowSpan="4"
                 Margin="1"
                 ItemsSource="{Binding SelectedVulnerabilitie.Parameters}"
                 FontSize="15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontWeight="Bold" />
                        <TextBlock Text="{Binding Description}"
                                   MaxWidth="800"
                                   TextWrapping="Wrap" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Источник знаний:"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding From}"
                                       FontWeight="UltraLight"
                                       FontStyle="Italic" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ProgressBar Grid.Row="2"
                     Grid.Column="0"
                     Margin="3"
                     IsIndeterminate="{Binding IsIndeterminateProgressBar}" />

        <Button Grid.Row="3"
                Grid.Column="0"
                Style="{StaticResource Button}"
                Content="Обновить"
                Command="{Binding Update}" />

        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="Ход выполнения:"
                   Margin="5"
                   FontSize="15"
                   FontFamily="Consolas" />

        <ScrollViewer Grid.Row="1"
                      Grid.Column="2"
                      Grid.RowSpan="3"
                      Margin="3">
            <TextBlock Text="{Binding Status}"
                       FontSize="12" />
        </ScrollViewer>
    </Grid>
</UserControl>