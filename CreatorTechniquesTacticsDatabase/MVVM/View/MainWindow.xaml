<Window x:Class="CreatorTechniquesTacticsDatabase.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Common.Databases;assembly=Common"
        mc:Ignorable="d"
        Title="Модуль создания базы данных техник и тактик специализированных средств v 1.0"
        Height="450"
        Width="800"
        MinHeight="450"
        MinWidth="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="HeadingTextBlock"
               TargetType="TextBlock">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="FontSize"
                    Value="15" />
            <Setter Property="FontWeight"
                    Value="Bold" />
        </Style>
        <Style x:Key="DynamicTextBlock"
               TargetType="TextBlock">
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="FontSize"
                    Value="15" />
        </Style>
        <Style x:Key="Button"
               TargetType="Button">
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="FontSize"
                    Value="15" />
        </Style>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="0"
                    Margin="5">
                <TreeView Grid.Column="0"
                          Name="TreeViewtTT"
                          SelectedItemChanged="SelectedItemChanged"
                          ItemsSource="{Binding Tactics}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Techniques}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="{Binding FontSize}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Center"
                          Width="5"
                          Margin="0 5 0 5" />

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Column="2"
                    Margin="5">
                <ScrollViewer>
                    <TextBlock Text="{Binding SelectedItem.Description, ElementName=TreeViewtTT}"
                               FontSize="15"
                               TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>
        </Grid>

        <Border BorderBrush="Black"
                BorderThickness="1"
                Padding="2"
                Grid.Row="1"
                Margin="5">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Style="{StaticResource Button}"
                        Content="Открыть"
                        Command="{Binding LoadCommand}" />

                <Button Style="{StaticResource Button}"
                        Content="Сохранить"
                        IsEnabled="{Binding IsEnabled}"
                        Command="{Binding SaveCommand}" />

                <Button Style="{StaticResource Button}"
                        Content="Добавить"
                        Command="{Binding ShowAddView}"
                        CommandParameter="{StaticResource TrueValue}" />

                <Button Style="{StaticResource Button}"
                        Content="Удалить"
                        IsEnabled="{Binding IsEnabled}"
                        Command="{Binding DeleteElement}" />

                <Button Style="{StaticResource Button}"
                        Content="Изменить"
                        IsEnabled="{Binding IsEnabled}"
                        Command="{Binding ShowAddView}"
                        CommandParameter="{StaticResource FalseValue}" />

                <Button Style="{StaticResource Button}"
                        Content="Справка"
                        Command="{Binding GetHelpCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>